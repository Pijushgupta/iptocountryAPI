{% extends('base.html.twig') %}

{% block body%}
<div class="login-body  w-full">
    <div class="relative container mx-auto max-w-2xl h-screen flex flex-col justify-center items-center ">
        <div class="absolute h-72 w-72 bg-yellow-500 bg-opacity-70  rounded-full mix-blend-multiply  inset-y-1/2  animate-blob blur-3xl"></div>
        <div class="absolute h-72 w-72 bg-purple-500 bg-opacity-70 rounded-full mix-blend-multiply  left-5 animation-delay-4000 animate-blob blur-3xl"></div>
        <div class="absolute h-72 w-72 bg-red-500 bg-opacity-70 rounded-full mix-blend-multiply right-5 animation-delay-2000 animate-blob blur-3xl"></div>
        <a href="#" class="z-10 mb-4 bg-white bg-opacity-50  rounded-full backdrop-blur-lg  px-4 py-1 font-medium text-xs leading-6 mb-4">
        Get 50 api calls per day for <span class="text-blue-500">free</span> 
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=" w-3 h-3 inline"> <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" /> </svg>

        </a>
        <div class="rounded-xl flex flex-col z-10 w-full ">
            <form class="flex flex-col justify-center items-center">
                <input type="text" name="user-email" placeholder="Email" class="w-2/4 border-0 placeholder:opacity-50 rounded mb-2 bg-gray-200 bg-opacity-40 "/>
                <input type="password" name="user-password" placeholder="Password" class="w-2/4 border-0 placeholder:opacity-50 rounded mb-2 bg-gray-200 bg-opacity-40 after:content-['Hello'] "/>
                <div class="flex flex-row justify-between items-center w-2/4">
                    <a href="#" class="font-medium text-xs">
                    Forgot password
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 inline"> <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 19.5l15-15m0 0H8.25m11.25 0v11.25" /> </svg>

                    </a>
                    <button type="submit" class=" bg-blue-600 text-white px-6 py-2 rounded">login</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}